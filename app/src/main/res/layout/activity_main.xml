<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.khrystal.htb.MainActivity">

    <Button
        android:text="Hide When Scroll"
        android:onClick="first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="5dp"
        android:text="Transparent When Scroll"
        android:onClick="second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="5dp"
        android:text="Transparent When Scroll Second Ways"
        android:onClick="third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
